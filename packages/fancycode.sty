	rulesepcolor=\color{Aluminium1},
	keywordstyle={\bfseries\color{DarkSkyBlue}},
	commentstyle={\color{DarkChameleon}},
	identifierstyle=\color{Aluminium5},
	stringstyle={\color{DarkChocolate}},
